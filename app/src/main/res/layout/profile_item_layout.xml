<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:fontFamily="sans-serif"
        android:text="@string/sample_name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/profilePic"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <LinearLayout
            android:id="@+id/gender_section"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/gender"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_gender_info"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/sample_name"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            </LinearLayout>


    <LinearLayout
        android:id="@+id/about_section"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="sans-serif"
            android:text="@string/about"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_about_info"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="sans-serif"
            android:text="@string/sample_name"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/school_section"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_school"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="sans-serif"
            android:text="@string/school"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_school_info"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="sans-serif"
            android:text="@string/sample_name"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/hobbies_section"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_hobbies"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="sans-serif"
            android:text="@string/hobbies"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_hobbies_info"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="sans-serif"
            android:text="@string/sample_name"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>